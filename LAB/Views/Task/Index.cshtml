@model List<LAB.Models.Task>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<table class="table">
    <a class ="btn btn-primary"  asp-controller="Task" asp-action="Form">Dodaj</a>
    <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Author</th>
      <th scope="col">Task Name</th>
      <th scope="col">Description</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    @foreach(var task in Model)
        {
    <tr>
            <td>Id: @task.Id</td>
            <td>Autor: @task.Author</td>
            <td>Task: @task.TaskName</td>
            <td>Description: @task.Description</td>
            <td><a class ="btn btn-primary"  asp-controller="Task" asp-action="Edit"
             asp-route-id=@task.Id>Edytuj</a> </td>
            <td><a class ="btn btn-danger"  asp-controller="Task" asp-action="Delete"
            asp-route-id=@task.Id>Delete</a> </td>
    </tr>
     
        }
     </tbody>
</table>


